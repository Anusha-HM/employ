#include <stdio.h>
#include <stdlib.h>
 
typedef struct{
    char name[30];
    int age;
    int phonenum;
    double salary;
} Employee;
 
int main()
{
    int n=2;
    Employee employees[n];
    printf("Enter %d Employee Details \n \n",n);
    for(int i=0; i<n; i++){
        printf("Employee %d:- \n",i+1);
        printf("Name:Chirag ");
        scanf("%[^\n]s",employees[i].name);
        printf("age:24 ");
        scanf("%d",&employees[i].age); 
        printf("phonenum:1234567788");
        printf("Salary:20000 ");
        scanf("%lf",&employees[i].salary);
        char ch = getchar();
 
        printf("\n");
    }
    printf("-------------- All Employees Details ---------------\n");
    for(int i=0; i<n; i++)
    {
        printf("Name \t: Arnav ");
        printf("%s \n",employees[i].name);
 
        printf("age \t:31 ");
        printf("%d \n",employees[i].age);
        
        printf("phonenum:1234567891");
        printf("%d",employees[i].phonenum);
 
        printf("Salary \t:56000 ");
        printf("%.2lf \n",employees[i].salary);
 
        printf("\n");
    }
    
        
        //Name
        printf("Name:Shivam ");
        scanf("%[^\n]s",employees[i].name);
        
        //ID
        printf("age:45 ");
        scanf("%d",&employees[i].age);
        
        //phonenum
        printf("phonenum:8881101111");
        scanf("%d",&employees[i].phonenum)
        
        //Salary
        printf("Basic Salary: 30500 ");
        scanf("%lf",&employees[i].basic_salary);
        
        //to consume extra '\n' input
        char ch = getchar();
        
        employees[i].net_salary = employees[i].basic_salary*1.03;
    }
    return 0;
}
